@model  Splitwise.Repository.UserLoginAC

@{
    ViewData["Title"] = "Login";
}


<div class="jumbotron" style="background-color: whitesmoke; text-align: center; margin-top: 4%; box-shadow: 10px 10px 20px #777">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-6">
                <div id="leftcontainer">
                    <div class="container" style="margin-top: 15%; font-family: 'Times New Roman', Times, serif">
                        <p><h3 style="font-weight: bold; margin-bottom: 8%;">Splitwise</h3></p>
                        <p><span class="glyphicon glyphicon-ok"></span>  Easier to keep records.</p>
                        <p><span class="glyphicon glyphicon-ok"></span>  Makes it easier for people to share expense amongst themselves.</p>
                        <p><span class="glyphicon glyphicon-ok"></span>  Hassle free Settlements.</p>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-sm-6" style="border-left: 1px solid #777">
                <div id="rightcontainer">
                    <div class="container" style="height: 90%; width: 85%;">
                        <h3 style="margin-bottom: 15%; font-weight: bold;">Login</h3>
                        <form asp-action="Login" method="post" autocomplete="off" style="margin-top: 5%;">
                            <div class="form-group" style="margin-bottom: 10%">
                                <label asp-for="UserName" style="margin-bottom: 5%;">Email Address</label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter Your User Name" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="margin-bottom: 10%">
                                <label asp-for="Password" style="margin-bottom: 5%;"></label>
                                <input asp-for="Password" class="form-control" placeholder="Enter Your Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </form>
                        <a class="btn btn-primary" asp-action="Signup">Not a member? Register Yourself!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>