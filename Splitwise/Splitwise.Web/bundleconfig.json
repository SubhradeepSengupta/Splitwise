[
  {
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "App/css/site.css"
    ],
    "outputFileName": "App/css/site.min.css"
  },
  {
    "inputFiles": [
      "App/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    "outputFileName": "App/js/site.min.js",
    // Optionally generate .map file
    "sourceMap": false
  }
]
